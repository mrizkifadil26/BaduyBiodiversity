<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/parent_jamur"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/jamurParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/jamur_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@android:color/darker_gray"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_biologo_480" />

        <RelativeLayout
            android:id="@+id/jamur_display"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="false"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/jamur_image">

            <TextView
                android:id="@+id/jamur_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:text="Nama Lokal"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:textSize="24sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/jamur_nama_ilmiah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jamur_nama"
                android:layout_alignLeft="@+id/jamur_nama"
                android:text="Species"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:typeface="sans" />

            <TextView
                android:id="@+id/jamur_uv_text"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:gravity="center"
                android:text="@string/uv"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textStyle="bold" />

            <Button
                android:id="@+id/jamur_uv"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="0.03"
                android:textAllCaps="true"
                android:textColor="@color/cardview_light_background"
                android:typeface="sans" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
