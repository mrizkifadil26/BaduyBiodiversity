<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.ObatDetailActivity"
    tools:showIn="@layout/activity_obat_detail">

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detail_jamur_ilmiah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="16dp"
            android:text="Musa Paradisiaca L." />

        <View
            android:id="@+id/separator1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/detail_jamur_ilmiah"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/detail_famili_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separator1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Famili"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <TextView
            android:id="@+id/detail_famili"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_famili_text"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Musaceae"
            android:textAppearance="@android:style/TextAppearance.Material.Small" />

        <View
            android:id="@+id/separator2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/detail_famili"
            android:layout_margin="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/detail_lokasi_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separator2"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Lokasi"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <TextView
            android:id="@+id/detail_lokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_lokasi_text"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Di taman" />

        <View
            android:id="@+id/separator3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/detail_lokasi"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/detail_manfaat_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separator3"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Manfaat"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            tools:targetApi="lollipop" />

        <TextView
            android:id="@+id/detail_manfaat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_manfaat_text"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Menyembuhkan" />

        <View
            android:id="@+id/separator4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/detail_manfaat"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/detail_uv_text"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separator4"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="UV"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <Button
            android:id="@+id/detail_uv"
            style="@android:style/Widget.Material.Light.Button.Inset"
            android:layout_width="106dp"
            android:layout_height="24dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignTop="@+id/detail_uv_text"
            android:layout_alignRight="@+id/separator4"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="223dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/detail_uv_text"
            android:background="@color/colorAccent"
            android:fitsSystemWindows="true"
            android:text="0.03"
            android:textAppearance="@android:style/TextAppearance.Material.Widget.Button.Colored" />

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>